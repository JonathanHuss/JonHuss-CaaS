@model JonHuss_CaaS.UserInterface.Models.DiagramViewModel

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Save", "Home", FormMethod.Post, new { id = "SaveForm" }))
{


    <div id="sample">
        <h3>Conversation</h3>



        <div style="width:100%; white-space:nowrap;">
            <span style="display: inline-block; vertical-align: top; padding: 5px; width:18%">
                <div id="myPaletteDiv" style="border: solid 1px black; height: 620px"></div>
            </span>

            <span style="display: inline-block; vertical-align: top; padding: 5px; width:59%">
                <div id="myDiagramDiv" style="border: solid 1px black; height: 620px"></div>
            </span>

            <span style="display: inline-block; vertical-align: top; padding: 5px; width:23%">
                <div id="myInfoDiv" style="border: solid 1px black; height: 620px"></div>
            </span>
        </div>

        @Html.Hidden("jsonDiagram")

    </div>

}

<button onclick="Save()">Save</button>

<script type="text/javascript">
    init(@Html.Raw(Model.Nodes), @Html.Raw(Model.Links));
</script>

@section pageScripts {
    <script src="~/Scripts/go-1.6.13-debug.js"></script>
    <script src="~/Scripts/DataInspector.js"></script>
    <script src="~/Scripts/Edit/Edit.js"></script>

}